{
  "name": "handyplugins/simply-disable-comments",
  "description": "A simple way to disable comments on WordPress.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "HandyPlugins",
      "email": "support@handyplugins.co"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "autoload": {
    "psr-4": {
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "10up/wp_mock": "dev-trunk",
    "10up/phpcs-composer": "dev-master"
  },
  "scripts": {
    "lint": "phpcs . -s",
    "lint-fix": "phpcbf ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
